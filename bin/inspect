#!/bin/bash
set -uo pipefail
cd "$(dirname "$0")/.."

dirs=(
  clear-config
  microlibs
  mr.boilerplate
  nyaya
  scalacss
  scala-graal
  scalajs-benchmark
  scalajs-react
  test-state
  tla2json
  univeq
  webapp-util
)

for f in "${dirs[@]}"; do
  echo "$f ===================================================================================================="

  egrep -h ' %%%? |Dep\.| +% +Test' ../$f/project/*.scala ../$f/*.sbt 2>/dev/null \
    | egrep -iv 'Def.setting|ompilerPlugin|ProvidedJS|org\.|betterm|kindproj|epfl|"io\.|haoyi|collcompat|chuusai|liancheng|testkit|julien|scalaCompiler|scalaReflect|jamm' \
    | perl -pe 's/^ +//; s/  +/ /g; s/^val .+?= //;  s/libraryDependencies *\S+ *//; s/[),]+$//; s/\.value//g; s/(Dep|Ver)\.//g; s/ +$//;' \
    | perl -pe 's/^(Seq|\.(?:jsS|s)ettings)\(//' \
    | egrep -iv '^([um]test|ScalaJsDom|sourcecode|scalatest|cats.*|scalaz)( % Test)?$' \
    | perl -pe 's/ % Test$/ -------------------- Test/' \
    | sort -u

  echo "* Scalaz: $(rg -t scala scalaz "../$f" | wc -l)"
  echo "* 2.12: $(rg -t scala -F 2.12. "../$f" | wc -l)"

  echo
done
